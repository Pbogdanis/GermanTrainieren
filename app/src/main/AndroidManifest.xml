<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gerproject.germantrainieren">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Articles"
            android:label="@string/articles">
        </activity>
        <activity
            android:name=".Plurals"
            android:label="@string/plurals">
        </activity>
        <activity
            android:name=".EditList"
            android:label="@string/edit_list">
        </activity>
        <activity
            android:name=".SaveNewWord"
            android:label="@string/save">
        </activity>
        <activity
            android:name=".DeleteWord"
            android:label="@string/delete">
        </activity>
    </application>

</manifest>